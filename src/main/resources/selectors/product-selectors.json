{
  "product_pages": {
    "category_listing": {
      "url_pattern": "/{category}",
      "layout_controls": {
        "view_mode": {
          "grid_view": {
            "primary": "a[href*='viewmode=grid']",
            "secondary": ".viewmode-icon[title='Grid']",
            "xpath": "//a[contains(@href, 'viewmode=grid')]",
            "stability": "Medium"
          },
          "list_view": {
            "primary": "a[href*='viewmode=list']",
            "secondary": ".viewmode-icon[title='List']",
            "xpath": "//a[contains(@href, 'viewmode=list')]",
            "stability": "Medium"
          }
        },
        "sort_dropdown": {
          "primary": "#products-orderby",
          "secondary": "select[name='orderby']",
          "xpath": "//select[@id='products-orderby' or @name='orderby']",
          "stability": "High"
        },
        "page_size": {
          "primary": "#products-pagesize",
          "secondary": "select[name='pagesize']",
          "xpath": "//select[@id='products-pagesize' or @name='pagesize']",
          "stability": "High"
        }
      },
      "filtering": {
        "price_ranges": {
          "under_25": {
            "primary": "a[href*='price=0-25']",
            "secondary": "a:contains('Under $25')",
            "xpath": "//a[contains(@href, 'price=0-25')]",
            "stability": "Medium"
          },
          "25_to_50": {
            "primary": "a[href*='price=25-50']",
            "secondary": "a:contains('$25 - $50')",
            "xpath": "//a[contains(@href, 'price=25-50')]",
            "stability": "Medium"
          },
          "over_50": {
            "primary": "a[href*='price=50-']",
            "secondary": "a:contains('Over $50')",
            "xpath": "//a[contains(@href, 'price=50-')]",
            "stability": "Medium"
          }
        }
      },
      "product_grid": {
        "container": {
          "primary": ".product-grid",
          "secondary": "[class*='product-grid']",
          "xpath": "//div[contains(@class, 'product-grid')]",
          "stability": "High"
        },
        "product_item": {
          "primary": ".item-box",
          "secondary": "[class*='item-box']",
          "xpath": "//div[contains(@class, 'item-box')]",
          "stability": "High"
        },
        "product_title": {
          "primary": ".product-title a",
          "secondary": "[class*='product-title'] a",
          "xpath": "//div[contains(@class, 'product-title')]//a",
          "stability": "High"
        },
        "product_image": {
          "primary": ".picture a",
          "secondary": "[class*='picture'] a",
          "xpath": "//div[contains(@class, 'picture')]//a",
          "stability": "High"
        },
        "product_price": {
          "primary": ".price",
          "secondary": "[class*='price']",
          "xpath": "//span[contains(@class, 'price')]",
          "stability": "High"
        }
      },
      "pagination": {
        "page_numbers": {
          "primary": ".pager a",
          "secondary": "[class*='pager'] a",
          "xpath": "//div[contains(@class, 'pager')]//a",
          "stability": "Medium"
        },
        "next_page": {
          "primary": ".next-page",
          "secondary": "a:contains('Next')",
          "xpath": "//a[contains(@class, 'next-page')]",
          "stability": "Medium"
        },
        "previous_page": {
          "primary": ".previous-page",
          "secondary": "a:contains('Previous')",
          "xpath": "//a[contains(@class, 'previous-page')]",
          "stability": "Medium"
        }
      }
    },
    "product_detail": {
      "url_pattern": "/{product-slug}",
      "product_info": {
        "title": {
          "primary": ".product-name h1",
          "secondary": "h1[class*='product-name']",
          "xpath": "//h1[contains(@class, 'product-name')]",
          "stability": "High"
        },
        "price": {
          "primary": ".price-value-1",
          "secondary": "[class*='price-value']",
          "xpath": "//span[contains(@class, 'price-value')]",
          "stability": "Medium"
        },
        "old_price": {
          "primary": ".old-price",
          "secondary": "[class*='old-price']",
          "xpath": "//span[contains(@class, 'old-price')]",
          "stability": "Medium"
        },
        "availability": {
          "primary": ".stock",
          "secondary": "[class*='stock']",
          "xpath": "//div[contains(@class, 'stock')]",
          "stability": "Medium"
        },
        "short_description": {
          "primary": ".short-description",
          "secondary": "[class*='short-description']",
          "xpath": "//div[contains(@class, 'short-description')]",
          "stability": "Medium"
        }
      },
      "purchase_options": {
        "quantity_input": {
          "primary": "#addtocart_{productId}_EnteredQuantity",
          "secondary": "input[name*='EnteredQuantity']",
          "xpath": "//input[contains(@name, 'EnteredQuantity')]",
          "stability": "High"
        },
        "add_to_cart_button": {
          "primary": "#add-to-cart-button-{productId}",
          "secondary": "input[value='Add to cart']",
          "xpath": "//input[@value='Add to cart']",
          "stability": "High"
        },
        "add_to_wishlist": {
          "primary": "#add-to-wishlist-button-{productId}",
          "secondary": "input[value='Add to wishlist']",
          "xpath": "//input[@value='Add to wishlist']",
          "stability": "Medium"
        },
        "add_to_compare": {
          "primary": "#add-to-compare-list-button-{productId}",
          "secondary": "input[value='Add to compare list']",
          "xpath": "//input[@value='Add to compare list']",
          "stability": "Medium"
        }
      },
      "reviews": {
        "rating_display": {
          "primary": ".rating",
          "secondary": "[class*='rating']",
          "xpath": "//div[contains(@class, 'rating')]",
          "stability": "Medium"
        },
        "review_count": {
          "primary": ".reviews a",
          "secondary": "a:contains('review')",
          "xpath": "//a[contains(text(), 'review')]",
          "stability": "Low"
        },
        "write_review": {
          "primary": "input[value='Write review']",
          "secondary": "input[onclick*='setlocation']",
          "xpath": "//input[@value='Write review']",
          "stability": "Medium"
        }
      },
      "product_tags": {
        "tags_container": {
          "primary": ".tags",
          "secondary": "[class*='tags']",
          "xpath": "//div[contains(@class, 'tags')]",
          "stability": "Medium"
        },
        "tag_link": {
          "primary": ".tags a",
          "secondary": "[class*='tags'] a",
          "xpath": "//div[contains(@class, 'tags')]//a",
          "stability": "Medium"
        }
      },
      "related_products": {
        "container": {
          "primary": ".related-products",
          "secondary": "[class*='related-products']",
          "xpath": "//div[contains(@class, 'related-products')]",
          "stability": "Medium"
        },
        "related_item": {
          "primary": ".related-products .item-box",
          "secondary": "[class*='related-products'] [class*='item-box']",
          "xpath": "//div[contains(@class, 'related-products')]//div[contains(@class, 'item-box')]",
          "stability": "Medium"
        }
      }
    },
    "search_results": {
      "url_pattern": "/search",
      "search_elements": {
        "search_input": {
          "primary": "#q",
          "secondary": "input[name='q']",
          "xpath": "//input[@id='q' or @name='q']",
          "stability": "High"
        },
        "search_button": {
          "primary": "input[value='Search']",
          "secondary": "[class*='search-button']",
          "xpath": "//input[@value='Search']",
          "stability": "Medium"
        },
        "advanced_search": {
          "primary": "#As",
          "secondary": "input[name='As']",
          "xpath": "//input[@id='As' or @name='As']",
          "stability": "Medium"
        },
        "category_dropdown": {
          "primary": "#Cid",
          "secondary": "select[name='Cid']",
          "xpath": "//select[@id='Cid' or @name='Cid']",
          "stability": "High"
        },
        "manufacturer_dropdown": {
          "primary": "#Mid",
          "secondary": "select[name='Mid']",
          "xpath": "//select[@id='Mid' or @name='Mid']",
          "stability": "High"
        }
      },
      "results": {
        "results_count": {
          "primary": ".search-results",
          "secondary": "[class*='search-results']",
          "xpath": "//div[contains(@class, 'search-results')]",
          "stability": "Medium"
        },
        "no_results": {
          "primary": ".no-result",
          "secondary": "[class*='no-result']",
          "xpath": "//div[contains(@class, 'no-result')]",
          "stability": "Medium"
        }
      }
    }
  },
  "automation_scenarios": {
    "product_browsing": {
      "category_navigation": {
        "steps": [
          "Navigate to category page",
          "Verify products are displayed",
          "Test sorting options",
          "Test view mode changes",
          "Test pagination"
        ],
        "assertions": [
          "Products grid is visible",
          "Product count matches pagination",
          "Sorting changes product order",
          "All product links are functional"
        ]
      },
      "product_filtering": {
        "steps": [
          "Apply price range filter",
          "Verify filtered results",
          "Combine multiple filters",
          "Clear filters"
        ],
        "assertions": [
          "Only products in price range displayed",
          "Filter combinations work correctly",
          "Clear filters resets to all products"
        ]
      }
    },
    "product_details": {
      "view_product": {
        "steps": [
          "Click product from listing",
          "Verify product details loaded",
          "Check all product information",
          "Verify related products"
        ],
        "assertions": [
          "Product title matches",
          "Price is displayed correctly",
          "Add to cart button is present",
          "Stock status is shown"
        ]
      },
      "add_to_cart": {
        "steps": [
          "Enter quantity",
          "Click add to cart",
          "Verify cart update",
          "Check cart contents"
        ],
        "assertions": [
          "Cart quantity updates",
          "Product added to cart",
          "Cart total is correct"
        ]
      }
    },
    "search_functionality": {
      "basic_search": {
        "steps": [
          "Enter search term",
          "Execute search",
          "Verify results",
          "Test no results scenario"
        ],
        "assertions": [
          "Results contain search term",
          "Results count is displayed",
          "No results message for invalid searches"
        ]
      },
      "advanced_search": {
        "steps": [
          "Use advanced search options",
          "Set category filter",
          "Set manufacturer filter",
          "Execute search"
        ],
        "assertions": [
          "Results match all criteria",
          "Filters are applied correctly"
        ]
      }
    }
  },
  "data_requirements": {
    "test_products": [
      "Products in different categories",
      "Products with different price ranges",
      "Out of stock products",
      "Products with reviews",
      "Products with related items"
    ],
    "search_terms": [
      "Valid product names",
      "Partial product names",
      "Invalid search terms",
      "Special characters",
      "Empty search queries"
    ]
  }
}