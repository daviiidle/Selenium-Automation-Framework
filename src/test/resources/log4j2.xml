<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Properties>
        <Property name="LIVE_PATTERN">%d{HH:mm:ss} %-5level %logger{25} - %msg%n</Property>
        <Property name="LOG_PATH">target/logs</Property>
    </Properties>

    <Appenders>
        <!-- Live Test Log - Clean and Direct -->
        <RollingFile name="LiveTestLog" fileName="${LOG_PATH}/test-run.log"
                     filePattern="${LOG_PATH}/test-run-%d{yyyy-MM-dd-HH-mm}.log">
            <PatternLayout pattern="${LIVE_PATTERN}"/>
            <Policies>
                <OnStartupTriggeringPolicy />
                <SizeBasedTriggeringPolicy size="10MB"/>
            </Policies>
            <DefaultRolloverStrategy max="5"/>
        </RollingFile>

        <!-- Error Log - Issues Only -->
        <RollingFile name="ErrorLog" fileName="${LOG_PATH}/errors.log"
                     filePattern="${LOG_PATH}/errors-%d{yyyy-MM-dd}.log">
            <PatternLayout pattern="%d{HH:mm:ss} ERROR %logger{15} - %msg%n"/>
            <ThresholdFilter level="ERROR" onMatch="ACCEPT" onMismatch="DENY"/>
            <Policies>
                <TimeBasedTriggeringPolicy interval="1"/>
            </Policies>
            <DefaultRolloverStrategy max="3"/>
        </RollingFile>

        <!-- Console - Minimal Output -->
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} %-5level %msg%n"/>
            <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>
        </Console>
    </Appenders>

    <Loggers>
        <!-- Test Execution - Main Logger -->
        <Logger name="tests" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="LiveTestLog"/>
            <AppenderRef ref="ErrorLog"/>
        </Logger>

        <!-- Page Actions - Key Actions Only -->
        <Logger name="pages" level="INFO" additivity="false">
            <AppenderRef ref="LiveTestLog"/>
            <AppenderRef ref="ErrorLog"/>
        </Logger>

        <!-- Utils and Assertions -->
        <Logger name="utils" level="WARN" additivity="false">
            <AppenderRef ref="LiveTestLog"/>
            <AppenderRef ref="ErrorLog"/>
        </Logger>

        <!-- Framework Components -->
        <Logger name="config" level="WARN" additivity="false">
            <AppenderRef ref="LiveTestLog"/>
        </Logger>

        <Logger name="drivers" level="WARN" additivity="false">
            <AppenderRef ref="LiveTestLog"/>
        </Logger>

        <!-- External Libraries - Errors Only -->
        <Logger name="org.openqa.selenium" level="ERROR" additivity="false">
            <AppenderRef ref="ErrorLog"/>
        </Logger>

        <Logger name="io.github.bonigarcia" level="ERROR" additivity="false">
            <AppenderRef ref="ErrorLog"/>
        </Logger>

        <Logger name="org.testng" level="ERROR" additivity="false">
            <AppenderRef ref="ErrorLog"/>
        </Logger>

        <!-- Root Logger -->
        <Root level="WARN">
            <AppenderRef ref="LiveTestLog"/>
            <AppenderRef ref="ErrorLog"/>
        </Root>
    </Loggers>
</Configuration>