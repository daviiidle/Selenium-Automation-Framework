<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="DemoWebShop Shard 4 - Error and Account Tests"
       parallel="methods"
       thread-count="4"
       verbose="1"
       data-provider-thread-count="2"
       time-out="600000"
       preserve-order="false">

    <parameter name="browser" value="chrome"/>
    <parameter name="headless" value="true"/>

    <test name="Error Handling Tests Shard"
          preserve-order="false"
          parallel="methods"
          thread-count="2">
        <packages>
            <package name="tests.error"/>
        </packages>
    </test>

    <test name="Account Tests Shard"
          preserve-order="false"
          parallel="methods"
          thread-count="2">
        <packages>
            <package name="tests.account"/>
        </packages>
    </test>

</suite>
